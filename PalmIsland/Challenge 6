#pragma config(StandardModel, "RVW Buggybot")
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
//robot navigates dock and boxes using sensors
//Ana Sapp, Buggy Bot, Challenge 6

task main()
{

while(SensorValue(touch)==0)//robot moves forward until touches wall
	{
		motor[motorB]=50; //robot goes forward at 50% power
		motor[motorC]=50;
	}

	motor[motorB]=-50;  //robot goes backward for 300 milliseconds
	motor[motorC]=-50;
	wait1Msec(300);


	motor[motorB]=50; //robot makes left point turn for 560 milliseconds at 50% power
	motor[motorC]=-50;
	wait1Msec(560);

while(SensorValue(sonar)>42) //robot goes forward at 100% power when it is greater than 42cm
	{
		motor[motorB]=100;
		motor[motorC]=100;
	}

	motor[motorB]=-50; //robot goes backwards for 450 milliseconds seconds
	motor[motorC]=-50;
	wait1Msec(450);

	motor[motorB]=50; //robot makes left point turn for 470 milliseconds
	motor[motorC]=-50;
	wait1Msec(470);

	motor[motorB]=50; //robot goes forward at 50% power for half a second
	motor[motorC]=50;
	wait1Msec(500);

	motor[motorB]=-50;  //robot goes backwards for about half a second at 50% power
	motor[motorC]=-50;
	wait1Msec(450);
}
