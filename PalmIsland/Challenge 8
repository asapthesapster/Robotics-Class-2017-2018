#pragma config(StandardModel, "RVW Buggybot")
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
//Ana Sapp, Mission 8: line track to the end of the line while concerning sand (coconuts collected)
//buggybot
task main()
{

motor[motorB]=50;  //robot goes forward at 50% power for 1200 milliseconds
motor[motorC]=50;
wait1Msec(1200);

clearTimer(T1); //timed cleared

while(time1(T1)<5000)//will loop for 5 seconds
{
	if(SensorValue(light)<30)  //robot makes left swing turn in dark
		{
			motor[motorB]=50;
			motor[motorC]=0;
		}
		else //robot makes a right swing turn when it sees light
		{
			motor[motorB]=0;
			motor[motorC]=50;
		}
}

		motor[motorB]=100; //robot makes left swing turn for a second
		motor[motorC]=70;
		wait1Msec(1000);

		motor[motorB]=100; //robot makes left swing turn for 1600 milliseconds
		motor[motorC]=62;
		wait1Msec(1600);



		clearTimer(T1);  //timer is cleared

while(time1(T1)<9200)//will loop for 9200 milliseconds
{
	if(SensorValue(light)<30)  //robot makes left swing turn in dark
		{
			motor[motorB]=50;
			motor[motorC]=0;
		}
		else //robot makes a right swing turn when it sees light
		{
			motor[motorB]=0;
			motor[motorC]=50;
		}
}

	motor[motorB]=50;
	motor[motorC]=50;  //robot goes forward at 50% power for 370
	wait1Msec(370);



}
